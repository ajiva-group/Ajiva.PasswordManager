<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
                    xmlns:app="clr-namespace:WeatherTwentyOne.Resources.Styles"
                    x:Class="Ajiva.PasswordManager.Ui.Maui.Resources.Styles.DefaultLists"
                    xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls">

    <!-- data templates -->
    <DataTemplate x:Key="PasswordEntryTemplate">
        <Grid Height="48" AutomationProperties.Name="{Binding Value}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="48"/>
                <ColumnDefinition Width="360"/>
                <ColumnDefinition Width="360"/>
                <ColumnDefinition Width="360"/>
            </Grid.ColumnDefinitions>
            <Ellipse Height="32" Width="32" VerticalOptions="Center">
                <Ellipse.Fill>
                    <ImagePaint>
                       
                    </ImagePaint>
                </Ellipse.Fill>
            </Ellipse>
            <Label Grid.Column="1" VerticalOptions="Center" Text="{Binding Description}" />
            <Label Grid.Column="2" VerticalOptions="Center" Text="{Binding Username}"/>
            <Label Grid.Column="3" VerticalOptions="Center" Text="{Binding Password}"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>